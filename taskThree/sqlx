
package main

import (
	"fmt"

	"github.com/jmoiron/sqlx"
)

func main() {

	db, e := sqlx.Connect("mysql", "root:123456@tcp(127.0.0.1:3306)/gorm")
	if e != nil {
		return
	}
	defer db.Close()
	// 	Sqlx入门
	// 题目1：使用SQL扩展库进行查询
	// 假设你已经使用Sqlx连接到一个数据库，并且有一个 employees 表，包含字段 id 、 name 、 department 、 salary 。
	// 要求 ：
	// 编写Go代码，使用Sqlx查询 employees 表中所有部门为 "技术部" 的员工信息，并将结果映射到一个自定义的 Employee 结构体切片中。

	query := `CREATE TABLE employees (
	    id INT AUTO_INCREMENT PRIMARY KEY,
	    name VARCHAR(100) NOT NULL,
	    department VARCHAR(100) NOT NULL,
	    salary DOUBLE(10,2) DEFAULT NULL
	) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;`
	db.Exec(query)
	db.Exec("insert into employees (name,department,salary) values(?,?,?)", "zhang", "技术部", 12.5)
	var one = employees{Name: "qfwioejf", Department: "技术部", Salary: 45.6}
	db.NamedExec("insert into employees (name,department,salary) values(:name,:department,:salary)", &one)

	var list = []employees{}
	db.Select(&list, "select * from employees where department= ?", "技术部")
	fmt.Printf("employees=", list)

	// 编写Go代码，使用Sqlx查询 employees 表中工资最高的员工信息，并将结果映射到一个 Employee 结构体中。

	var employeesOne = []employees{}
	db.Select(&employeesOne, "select * from employees order by salary desc limit 1")
	fmt.Printf("asdf=", employeesOne[0])
	// 题目2：实现类型安全映射
	// 假设有一个 books 表，包含字段 id 、 title 、 author 、 price 。
	// 要求 ：
	// 定义一个 Book 结构体，包含与 books 表对应的字段。
	query2 := `CREATE TABLE books (
	    id INT AUTO_INCREMENT PRIMARY KEY,
	    title VARCHAR(100) NOT NULL,
	    author VARCHAR(100) NOT NULL,
	    price DOUBLE(10,2) DEFAULT NULL
	) ENGINE=InnoDB DEFAULT CHARSET=utf8mb4;`
	db.Exec(query2)

	// 编写Go代码，使用Sqlx执行一个复杂的查询，例如查询价格大于 50 元的书籍，并将结果映射到 Book 结构体切片中，确保类型安全。
	db.Exec("insert into books (title,author,price) values(?,?,?)", "明日之子", "华为", 33.6)
	db.Exec("insert into books (title,author,price) values(?,?,?)", "宫崎骏", "伽罗", 69.3)
	var books = []books{}
	db.Select(&books, "select * from books where price > ?", 50)
	fmt.Printf("books=", books)
}

type employees struct {
	Id         int     `db:"id"`
	Name       string  `db:"name"`
	Department string  `db:"department"`
	Salary     float64 `db:"salary"`
}

type books struct {
	Id     int     `db:"id"`
	Title  string  `db:"title"`
	Author string  `db:"author"`
	Price  float64 `db:"price"`
}
